@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/iconHarry.png" sizes="32x32" />
    <title>CinEXame - Funcionários</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/assets/style.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -- -->

</head>
<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form method="post">
                <div class="social-container">
                    <a href="#" class="social"><img src="~/assets/img/pipoca.png"></a>
                    <a href="#" class="social"><img src="~/assets/img/cinema.png"></a>
                    <a href="#" class="social"><img src="~/assets/img/tira-de-filme.png"></a>
                </div>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form method="dialog" id="validacaoformulario" class="was-validated" novalidate>
                <h1>Login</h1>
                <div class="social-container">
                    <a class="social"><img src="~/assets/img/pipoca.png"></a>
                    <a class="social"><img src="~/assets/img/cinema.png"></a>
                    <a class="social"><img src="~/assets/img/tira-de-filme.png"></a>
                </div>
                <input class="form-control" type="email" name="email" placeholder="Email" id="txtUsuario" required />
                <span clas="alert" id="msgAlerta"></span>
                <input class="form-control" type="password" placeholder="Senha" id="txtSenha" required />
                <span clas="alert" id="msgAlertaSenha"></span>
                <br />
                <button type="submit" name="Entrar" onclick="entrar('f0122197e-9e2e-7ec7-8c79-4723d6a60r1e');">Entrar</button>
                <a asp-controller="Login" asp-action="Login" style="color:#40396E ">Voltar</a>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>Olá, Funcionário!</h1>
                    <p>É bom ter você conosco!</p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/Login/login.js" type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
